class ShipPlacement
{
public:
    ShipPlacement()
    {
       orientation;
       xCoor;
       yCoor;
    }
    void setorientation(char o)
    {
        orientation= o;
    }
    char getorientation()
    {
        return orientation;
    }
    void setxCoor(int x)
    {
        xCoor= x;
    }
    int getxCoor()
    {
        return xCoor;
    }
 void setyCoor(int y)
    {
        yCoor= y;
    }
    int getyCoor()
    {
        return yCoor;
    }
    int place() //to place ships on board
    {
void setShipPlacement(Board b, int size)
{
    if (orientation=='v')
    {
        for (int i=0;i<size;i++)
        {
            b.setShip((x+i),y);
        }
    }
    else if(orientation=='h')
    {
       for (int i=0;i<size;i++)
        {
            b.setShip(x,(y+i));
        } 
    }
}

private:
    char orientation;
    int xCoor;
    int yCoor;

   };

int main()
{
   
const int shipNames = 4;
string names [shipNames]= {"Conqueror", "Captain", "Victory", "Talent"};

const int ordinalNo = 4;
string oNos [ordinalNo]= {"1st", "2nd", "3rd", "4th"};

const int unitsLong = 4;
int units [unitsLong]= {3, 4, 5, 6};

	
for (int n=0; n<4; n++) 
{
    cout << "Your "<< oNos[n] << " ship is named "<< names [n]<<endl;
    cout << "This ship is "<<units[n]<< " long."; 
    cout << "Do you want it to be vertical or horizontal: v/h? ";
   
   //create four ShipPlacement objects    
    ShipPlacement ShipPlacement1, ShipPlacement2, ShipPlacement3, ShipPlacement4;  
    //declare variables for input
    char o;
    int x, y; 
    
    //get input for ship 1
    cout << "Your 1st ship is named Conqueror. It is 3 units long. Do you want it to be vertical or horizontal? Enter v or h: ";
    cin >> o;
    ShipPlacement1.setorientation(o);
    cout << "Enter the x coordinate for your ship: ";
    cin >> x;
    ShipPlacement1.setxCoor(x);
    cout << "Enter the y coordinate for your ship: ";
    cin >> y;
    ShipPlacement1.setyCoor(y);
   

 //get input for ship 2
    cout << "Your 2nd ship is named Captain. It is 4 units long. Do you want it to be vertical or horizontal? Enter v or h: ";
    cin >> o;
    ShipPlacement2.setorientation(o);
    cout << "Enter the x coordinate for your ship: ";
    cin >> x;
    ShipPlacement2.setxCoor(x);
    cout << "Enter the y coordinate for your ship: ";
    cin >> y;
    ShipPlacement2.setyCoor(y);

    //get input for ship 3
    cout << "Your 3rd ship is named Victory. It is 5 units long. Do you want it to be vertical or horizontal? Enter v or h: ";
    cin >> o;
    ShipPlacement3.setorientation(o);
    cout << "Enter the x coordinate for your ship: ";
    cin >> x;
    ShipPlacement3.setxCoor(x);
    cout << "Enter the y coordinate for your ship: ";
    cin >> y;
    ShipPlacement3.setyCoor(y);

 //get input for ship 4
     cout << "Your 4th ship is named Talent. It is 6 units long. Do you want it to be vertical or horizontal? Enter v or h: ";
    cin >> o;
    ShipPlacement4.setorientation(o);
    cout << "Enter the x coordinate for your ship: ";
    cin >> x;
    ShipPlacement4.setxCoor(x);
    cout << "Enter the y coordinate for your ship: ";
    cin >> y;
