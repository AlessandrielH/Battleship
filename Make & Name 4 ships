class ShipPlacement
{
public:
    ShipPlacement()
    {
       nameofShip;
       orientation;
       xCoor;
       yCoor;
    }
    void setnameofShip(string n)
    {
        nameofShip= n;
    }
    string getnameofShip()
    {
        return nameofShip;
    }
    void setorientation(char o)
    {
        orientation= o;
    }
    char getorientation()
    {
        return orientation;
    }
    void setxCoor(int x)
    {
        xCoor= x;
    }
    int getxCoor()
    {
        return xCoor;
    }
 void setyCoor(int y)
    {
        yCoor= y;
    }
    int getyCoor()
    {
        return yCoor;
    }
    int place() //to place ships on board
    {


private:
    string nameofShip;
    char orientation;
    int xCoor;
    int yCoor;

   };


int main()
{
    //create four ShipPlacement objects    
    ShipPlacement ShipPlacement1, ShipPlacement2, ShipPlacement3, ShipPlacement4;  
    //declare variables for input
    string n;
    char o;
    int x, y; 
    
    //get input for ship 1
    cout << "Enter the name of your first ship: " << endl;
    cin >> n;
    ShipPlacement1.setnameofShip(n);
    cout << "Do you want your ship to be vertical or horizontal? Enter v or h: ";
    cin >> o;
    ShipPlacement1.setorientation(o);
    cout << "Enter the x coordinate for your ship: ";
    cin >> x;
    ShipPlacement1.setxCoor(x);
    cout << "Enter the y coordinate for your ship: ";
    cin >> y;
    ShipPlacement1.setyCoor(y);

}
